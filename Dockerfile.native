####
# Build image
####
FROM --platform=linux/arm64 ghcr.io/graalvm/graalvm-ce:ol7-java17 AS build
LABEL maintainer=avvero

COPY gradlew /app/
COPY gradle /app/gradle
WORKDIR /app
RUN ./gradlew --version

WORKDIR /app
COPY . .
RUN ./gradlew nativeCompile --no-daemon

####
# Runtime image
####
FROM debian:sid-slim
LABEL maintainer=avvero

COPY --from=build /app/build/native/nativeCompile/embedded-kafka /app/embedded-kafka

EXPOSE 8080 9093 2181

ENTRYPOINT [ "/app/embedded-kafka" ]